<!-- booksView.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Books View</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    .card {
      height: 100%;
    }
  </style>
</head>
<body>

  <div class="container">
    <h3 class="mt-3"><%= pageTitle %></h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-4">
      <% for (let index = 0; index < books.length; index++) { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= books[index].title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">By <%= books[index].author %></h6>
              <p class="card-text"><%= books[index].description %></p>
            </div>
            <div class="card-footer bg-primary text-white d-flex justify-content-between align-items-center">
              <h6 class="card-price mb-0">PKR <%= books[index].price %></h6>
              <div>
                <a href="/books/<%= books[index]._id %>/edit" class="btn btn-primary me-2">Edit</a>
                <form action="/books/<%= books[index]._id %>?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
    <div class="mt-4">
        <a href="/" class="btn btn-secondary">Go Back</a>
      </div>
  </div>
</body>
</html>
